{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./build/",

        "declaration": true,

        "module": "esnext",
        "moduleResolution": "bundler",

        "strict": true,
        "allowJs": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "target": "es6",
        "esModuleInterop": true,

        "resolveJsonModule": true,

        "jsx": "react-jsx",
         
        "typeRoots": [
            "src/types",
            "node_modules/@types"
        ]
    },
    "include": [
        "src",
        "schema"
    ]
}